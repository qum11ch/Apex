<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/resHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/team_results"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/resHeader"
                android:id="@+id/toggleButtons"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/radioButton_2025"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:text="@string/_2025_season"
                    android:textColor="@drawable/toggle_text_color"
                    style="@style/ToggleButton"
                    android:checked="false"/>
                <CheckBox
                    android:id="@+id/radioButton_2024"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@drawable/toggle_text_color"
                    android:text="@string/_2024_season"
                    style="@style/ToggleButton"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/results_layout"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/StatisticLayout"
                android:paddingTop = "10dp"
                android:layout_below="@id/toggleButtons">
                <LinearLayout
                    android:id="@+id/results_header"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="bottom"
                        android:text="@string/race_name_header"/>
                    <RelativeLayout
                        android:layout_weight="1.25"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="1dp">
                        <RelativeLayout
                            android:id="@+id/striped_first"
                            android:layout_width="match_parent"
                            android:layout_height="84dp"
                            android:background="@drawable/background_striped_lines_white">
                            <ImageView
                                android:id="@+id/firstDriver_image"
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:contentDescription="@string/first_driver"
                                android:scaleType="fitCenter" />
                        </RelativeLayout>
                        <TextView
                            android:layout_below="@id/striped_first"
                            android:gravity="center"
                            android:id='@+id/firstDriverFamilyName'
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1.25"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="1dp">
                        <RelativeLayout
                            android:id="@+id/striped_second"
                            android:layout_width="match_parent"
                            android:layout_height="84dp"
                            android:background="@drawable/background_striped_lines_white">
                            <ImageView
                                android:id="@+id/secondDriver_image"
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:contentDescription="@string/second_driver"
                                android:scaleType="fitCenter" />
                        </RelativeLayout>
                        <TextView
                            android:layout_below="@id/striped_second"
                            android:gravity="center"
                            android:id='@+id/secondDriverFamilyName'
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/light_grey"
                    android:layout_below="@id/results_header"
                    android:layout_marginEnd="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:paddingEnd="5dp"
                    android:paddingStart="0dp"
                    android:layout_below="@id/line"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/drivers_results"/>
            </RelativeLayout>
            <RelativeLayout
                style="@style/Borders"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_below="@id/results_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Borders"
                    android:id="@+id/keyMap_header"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/key_map" />
                <LinearLayout
                    android:id="@+id/gold_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_below="@id/keyMap_header">
                    <TextView
                        android:hyphenationFrequency="none"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:layout_weight="1.2"
                        style="@style/Borders"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_gold"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/gold"
                        android:backgroundTint="@color/light_gold"/>
                    <TextView
                        android:layout_weight="1.8"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/_1st_place_header"
                        android:background="@color/light_gold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_below="@id/gold_layout"
                    android:id="@+id/silver_layout">
                    <TextView
                        android:hyphenationFrequency="none"
                        android:layout_weight="1.2"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_silver"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/silver"
                        android:background="@color/light_silver"/>
                    <TextView
                        android:layout_weight="1.8"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/_2nd_place_header"
                        android:background="@color/light_silver"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_below="@id/silver_layout"
                    android:id="@+id/bronze_layout">
                    <TextView
                        android:hyphenationFrequency="none"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:layout_weight="1.2"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_bronze"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/bronze"
                        android:background="@color/light_bronze"/>
                    <TextView
                        android:layout_weight="1.8"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/_3rd_place_header"
                        android:background="@color/light_bronze"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:id="@+id/green_layout"
                    android:layout_below="@id/bronze_layout">
                    <TextView
                        android:layout_weight="1.2"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_green"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/green"
                        android:background="@color/light_green"/>
                    <TextView
                        android:hyphenationFrequency="none"
                        android:layout_weight="1.8"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/points_finish"
                        android:background="@color/light_green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_below="@id/green_layout"
                    android:id="@+id/purple_layout">
                    <TextView
                        android:hyphenationFrequency="none"
                        android:layout_weight="1.2"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_purple"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/purple"
                        android:background="@color/light_purple"/>
                    <TextView
                        android:hyphenationFrequency="none"

                        android:layout_weight="1.8"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/out_of_points_finish"
                        android:background="@color/light_purple"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pink_layout"
                    android:layout_below="@id/purple_layout"
                    android:weightSum="3">
                    <TextView
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:layout_weight="1.2"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_ret"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/pink"
                        android:background="@color/pink"/>
                    <TextView
                        android:layout_weight="1.8"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/retired"
                        android:background="@color/pink"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:id="@+id/white_layout"
                    android:layout_below="@id/pink_layout"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        style="@style/Borders"
                        android:layout_weight="1.2"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_white"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/white"
                        android:backgroundTintMode="screen"
                        android:backgroundTint="@color/white"/>
                    <TextView
                        android:layout_weight="1.8"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        style="@style/Borders"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/dns"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/black_layout"
                    android:layout_below="@id/white_layout"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        style="@style/Borders"
                        android:layout_weight="1.2"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_black"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/black"
                        android:backgroundTint="@color/black"/>
                    <TextView
                        android:hyphenationFrequency="none"

                        android:layout_weight="1.8"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        style="@style/Borders"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/dsq"
                        android:background="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_below="@id/black_layout"
                    android:id="@+id/blank_layout">
                    <TextView
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        style="@style/Borders"
                        android:layout_weight="1.2"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_blank"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:background="@color/light_grey"/>
                    <TextView
                        android:layout_weight="1.8"
                        android:layout_marginStart="0.5dp"
                        android:layout_marginEnd="0.5dp"
                        style="@style/Borders"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/wd"
                        android:background="@color/light_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textHeader_layout"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_below="@id/blank_layout">
                    <TextView
                        style="@style/Borders"
                        android:textStyle="bold"
                        android:layout_weight="1.2"
                        android:id="@+id/keyMap_textHeader"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/format" />
                    <TextView
                        style="@style/Borders"
                        android:textStyle="bold"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/meaning" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textHeader_layout"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:hyphenationFrequency="none"
                        style="@style/Borders"
                        android:layout_weight="1.2"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:id="@+id/keyMap_pole"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/purple"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/bold_purple" />
                    <TextView
                        android:hyphenationFrequency="none"
                        style="@style/Borders"
                        android:layout_weight="1.8"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="@string/pole_position" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>