<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorDriverPages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:clipToPadding="false"
        android:paddingTop="20dp"
        android:layout_marginEnd="10dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/resHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/team_results"
                android:textColor="@color/text_color_main"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textSize="28sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/resHeader"
                android:id="@+id/toggleButtons"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/radioButton_2025"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:text="@string/_2025_season"
                    android:textColor="@drawable/toggle_text_color"
                    style="@style/ToggleButton"
                    android:checked="false"/>
                <CheckBox
                    android:layout_marginStart="5dp"
                    android:id="@+id/radioButton_2024"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@drawable/toggle_text_color"
                    android:text="@string/_2024_season"
                    style="@style/ToggleButton"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/results_layout"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/StatisticLayout"
                android:paddingTop = "10dp"
                android:layout_below="@id/toggleButtons">
                <LinearLayout
                    android:id="@+id/results_header"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:weightSum="5">
                    <TextView

                        android:textColor="@color/text_color_main"
                        android:id="@+id/raceName_header"
                        android:layout_width="0dp"
                        android:layout_weight="2.7"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="bottom"
                        android:layout_marginEnd="2dp"
                        android:text="@string/race_name_header"/>
                    <RelativeLayout
                        android:id="@+id/firstDriver_layout"
                        android:layout_weight="1.15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="1dp">
                        <RelativeLayout
                            android:id="@+id/striped_first"
                            android:layout_width="match_parent"
                            android:layout_height="84dp"
                            style="@style/StripedLinesWhite">
                            <ImageView
                                android:id="@+id/firstDriver_image"
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:contentDescription="@string/first_driver"
                                android:scaleType="fitCenter"/>
                        </RelativeLayout>
                        <TextView
                            android:textColor="@color/text_color_main"
                            android:layout_below="@id/striped_first"
                            android:gravity="center"
                            android:id='@+id/firstDriverFamilyName'
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/secondDriver_layout"
                        android:layout_weight="1.15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="1dp"
                        android:layout_marginStart="1dp">
                        <RelativeLayout
                            android:id="@+id/striped_second"
                            android:layout_width="match_parent"
                            android:layout_height="84dp">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                style="@style/StripedLinesWhite"
                                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"/>
                            <ImageView
                                android:id="@+id/secondDriver_image"
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:contentDescription="@string/second_driver"
                                android:scaleType="fitCenter" />
                        </RelativeLayout>
                        <TextView
                            android:textColor="@color/text_color_main"
                            android:layout_below="@id/striped_second"
                            android:gravity="center"
                            android:id='@+id/secondDriverFamilyName'
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/thirdDriver_layout"
                        android:visibility="gone"
                        android:layout_weight="1.15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp">
                        <RelativeLayout
                            android:id="@+id/striped_third"
                            android:layout_width="match_parent"
                            android:layout_height="84dp">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                style="@style/StripedLinesWhite"
                                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerCircle"/>
                            <ImageView
                                android:id="@+id/thirdDriver_image"
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:contentDescription="@string/first_driver"
                                android:scaleType="fitCenter" />
                        </RelativeLayout>
                        <TextView
                            android:layout_below="@id/striped_third"
                            android:gravity="center"
                            android:id='@+id/thirdDriverFamilyName'
                            android:layout_width="match_parent"
                            android:textColor="@color/text_color_main"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/light_silver"
                    android:layout_below="@id/results_header"
                    android:layout_marginEnd="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:layout_below="@id/line"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/drivers_results"/>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_layout"
                    android:layout_below="@id/line"
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:duration="1000">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                        <include layout="@layout/shimmer_team_result"/>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:visibility="gone"
                    android:id="@+id/shimmerTriple_layout"
                    android:layout_below="@id/line"
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:duration="1000">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                        <include layout="@layout/shimmer_team_triple_result"/>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
            </RelativeLayout>
            <RelativeLayout
                style="@style/PtsStyle"
                android:backgroundTint="@color/dark_grey"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_below="@id/results_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="1dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    style="@style/TopKeyMapStyle"
                    android:id="@+id/gold_layout"
                    android:gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/_1st_place_header"/>
                <TextView
                    android:layout_marginTop="0.5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gold_layout"
                    android:id="@+id/silver_layout"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:text="@string/_2nd_place_header"
                    android:background="@color/light_silver"/>
                <TextView
                    android:layout_marginTop="0.5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/silver_layout"
                    android:id="@+id/bronze_layout"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/_3rd_place_header"
                    android:background="@color/light_bronze"/>
                <TextView
                    android:layout_marginTop="0.5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/green_layout"
                    android:layout_below="@id/bronze_layout"
                    android:hyphenationFrequency="none"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:text="@string/points_finish"
                    android:background="@color/light_green"/>
                <TextView
                    android:layout_marginTop="0.5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/green_layout"
                    android:id="@+id/purple_layout"
                    android:hyphenationFrequency="none"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/out_of_points_finish"
                    android:background="@color/light_purple"/>
                <TextView
                    android:layout_marginTop="0.5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:id="@+id/pink_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/purple_layout"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/retired"
                    android:background="@color/pink"/>
                <TextView
                    android:layout_marginTop="0.5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/white_layout"
                    android:layout_below="@id/pink_layout"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    style="@style/TopKeyMapStyle"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/dns"
                    android:background="@color/white"/>
                <TextView
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:hyphenationFrequency="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/black_layout"
                    android:layout_below="@id/white_layout"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    style="@style/TopKeyMapStyle"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/dsq"
                    android:background="@color/black"/>
                <TextView
                    android:layout_marginTop="0.5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/black_layout"
                    android:id="@+id/blank_layout"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/wd"
                    android:background="@color/light_grey"/>
                <TextView
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/blank_layout"
                    android:id="@+id/nc_layout"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/not_concluded"
                    android:background="@color/light_grey"/>
                <TextView
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    style="@style/BottomKeyMapStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nc_layout"
                    android:textColor="@color/purple"
                    android:textStyle="bold"
                    android:hyphenationFrequency="none"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textSize="20sp"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:text="@string/pole_position" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>