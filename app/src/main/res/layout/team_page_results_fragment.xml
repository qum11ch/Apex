<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="0dp"
    android:paddingTop="20dp"
    android:layout_marginBottom="30dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/resHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drivers results"
            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resHeader"
            android:id="@+id/toggleButtons"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/radioButton_2025"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:text="2025 Season"
                android:textColor="@drawable/toggle_text_color"
                style="@style/ToggleButton"
                android:checked="false"/>
            <CheckBox
                android:id="@+id/radioButton_2024"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@drawable/toggle_text_color"
                android:text="2024 Season"
                style="@style/ToggleButton"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/results_layout"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/StatisticLayout"
            android:paddingTop = "10dp"
            android:layout_below="@id/toggleButtons">
            <LinearLayout
                android:id="@+id/results_header"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="bottom"
                    android:text="Race name"/>
                <RelativeLayout
                    android:layout_weight="1.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp">
                    <RelativeLayout
                        android:id="@+id/striped_first"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:background="@drawable/background_striped_lines_white">
                        <ImageView
                            android:id="@+id/firstDriver_image"
                            android:layout_width="match_parent"
                            android:layout_height="84dp"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>
                    <TextView
                        android:layout_below="@id/striped_first"
                        android:gravity="center"
                        android:id='@+id/firstDriverFamilyName'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="1dp">
                    <RelativeLayout
                        android:id="@+id/striped_second"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:background="@drawable/background_striped_lines_white">
                        <ImageView
                            android:id="@+id/secondDriver_image"
                            android:layout_width="match_parent"
                            android:layout_height="84dp"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>
                    <TextView
                        android:layout_below="@id/striped_second"
                        android:gravity="center"
                        android:id='@+id/secondDriverFamilyName'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_grey"
                android:layout_below="@id/results_header"
                android:layout_marginEnd="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:paddingEnd="5dp"
                android:layout_below="@id/line"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/drivers_results"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            style="@style/Borders"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_below="@id/results_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Borders"
                android:id="@+id/keyMap_header"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Key Map" />
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                style="@style/Borders"
                android:layout_below="@id/keyMap_header"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_gold"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Gold"
                android:backgroundTint="@color/light_gold"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_header"
                android:layout_toRightOf="@id/keyMap_gold"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Winner"
                android:background="@color/light_gold"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_gold"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_silver"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Silver"
                android:background="@color/light_silver"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_gold"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_toRightOf="@id/keyMap_silver"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Second place"
                android:background="@color/light_silver"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_silver"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_bronze"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Bronze"
                android:background="@color/light_bronze"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_silver"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_toRightOf="@id/keyMap_bronze"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Third place"
                android:background="@color/light_bronze"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_bronze"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_green"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Green"
                android:background="@color/light_green"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_bronze"
                android:layout_toRightOf="@id/keyMap_green"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Finished in the points"
                android:background="@color/light_green"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_green"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_purple"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Purple"
                android:background="@color/light_purple"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_green"
                android:layout_toRightOf="@id/keyMap_purple"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Finished out of the points"
                android:background="@color/light_purple"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_purple"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_ret"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pink"
                android:background="@color/pink"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_below="@id/keyMap_purple"
                android:layout_toRightOf="@id/keyMap_ret"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Retired (Ret)"
                android:background="@color/pink"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                style="@style/Borders"
                android:layout_below="@id/keyMap_ret"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_white"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="White"
                android:backgroundTintMode="screen"
                android:backgroundTint="@color/white"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                style="@style/Borders"
                android:layout_below="@id/keyMap_ret"
                android:layout_toRightOf="@id/keyMap_white"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Did not start (DNS)"
                android:background="@color/white"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                style="@style/Borders"
                android:layout_below="@id/keyMap_white"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_black"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Black"
                android:backgroundTint="@color/black"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                style="@style/Borders"
                android:layout_below="@id/keyMap_white"
                android:layout_toRightOf="@id/keyMap_black"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Disqualified (DSQ)"
                android:background="@color/black"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                style="@style/Borders"
                android:layout_below="@id/keyMap_black"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_blank"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Blank"
                android:background="@color/light_grey"/>
            <TextView
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                style="@style/Borders"
                android:layout_below="@id/keyMap_black"
                android:layout_toRightOf="@id/keyMap_blank"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Withdrawn (WD)"
                android:background="@color/light_grey"/>
            <TextView
                style="@style/Borders"
                android:textStyle="bold"
                android:layout_below="@id/keyMap_blank"
                android:id="@+id/keyMap_textHeader"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Format" />
            <TextView
                style="@style/Borders"
                android:textStyle="bold"
                android:layout_below="@id/keyMap_blank"
                android:layout_toRightOf="@id/keyMap_textHeader"
                android:gravity="center"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Meaning" />
            <TextView
                style="@style/Borders"
                android:layout_below="@id/keyMap_textHeader"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:id="@+id/keyMap_pole"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Bold purple" />
            <TextView
                style="@style/Borders"
                android:layout_below="@id/keyMap_textHeader"
                android:layout_toRightOf="@id/keyMap_pole"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Pole position" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>