<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:backgroundTint="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/login_header"
            android:text="@string/dialog_login"
            android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader" />
        <TextView
            android:textColor="@color/text_color_main"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/login_text"
            android:layout_below="@id/login_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_login_info"
            android:textAppearance="@style/TextStyle.Gram.Regular.Simple"
            android:layout_gravity="center"
            android:textAlignment="center"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/login_text"
            android:theme="@style/StyledTilEditTextTheme"
            app:hintTextAppearance="@style/TextStyle.Gram.Regular.Simple"
            app:hintTextColor="@color/text_color_main"
            app:errorTextAppearance="@style/TextStyle.Gram.Regular.Simple"
            app:errorTextColor="@color/red"
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:hint="@string/usernameText"
            app:hintEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="@color/text_color_main"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:theme="@style/StyledTilEditTextTheme"
                android:id="@+id/loginUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/StyledTilEditTextTheme"
            app:hintTextAppearance="@style/TextStyle.Gram.Regular.Simple"
            app:hintTextColor="@color/text_color_main"
            app:errorTextAppearance="@style/TextStyle.Gram.Regular.Simple"
            app:errorTextColor="@color/red"
            android:id="@+id/password_layout"
            android:layout_below="@id/username_layout"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true"
            app:hintEnabled="true"
            android:hint="@string/passwordText">
            <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="@color/text_color_main"
                android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                android:inputType="textPassword"
                android:theme="@style/StyledTilEditTextTheme"
                android:id="@+id/loginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="end"
                android:textColor="@color/red"
                android:textAppearance="@style/TextStyle.Gram.Bold"
                android:textSize="20sp"
                android:id="@+id/resetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password" />
        </com.google.android.material.textfield.TextInputLayout>
        <FrameLayout
            android:layout_below="@id/password_layout"
            android:id="@+id/loginButton_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">
            <ProgressBar
                android:backgroundTint="@color/red"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:id="@+id/loginProgress"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/red"/>
            <Button
                android:textSize="18sp"
                android:enabled="false"
                android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginButton"
                android:text="@string/loginButton"
                style="@style/ButtonStyle"/>
        </FrameLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>