<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/header"
        android:paddingTop="15dp"
        android:layout_height="65dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="9"
        android:background="@color/pink">
        <ImageButton
            android:id='@+id/backButton'
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow"
            android:background="@color/pink"/>
        <TextView
            android:text="@string/account_page_header"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:id="@+id/teamsHeader"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:background="@color/pink"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ScrollView
        android:layout_weight="1"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/accountPage_layout"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="5dp"
                style="@style/LayoutStyle"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="40dp"
                    android:text="userName"
                    style="@style/SecondTitleTextStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/poster_image"
                    android:layout_width="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:src="@drawable/f1"
                    app:layout_constraintTop_toBottomOf="@+id/userName" />
                <TextView
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/black"
                    android:id="@+id/accountText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/grey"
                    android:text="@string/account_information"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/poster_image"/>
                <LinearLayout
                    android:id="@+id/fullname_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/accountText"
                    android:weightSum="2">
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/fullname_text"
                        android:layout_width="0dp" android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/full_name"
                        android:paddingStart="0dp"
                        android:paddingEnd="5dp"
                        android:gravity="end"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/fullname"
                        android:layout_width="0dp" android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="fullname"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:gravity="start" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/fullname_layout"
                    android:weightSum="2"
                    android:background="@color/light_blue">
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/email_text"
                        android:layout_width="0dp" android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:paddingStart="0dp"
                        android:paddingEnd="5dp"
                        android:gravity="end" />
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/email"
                        android:layout_width="0dp" android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="email"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:gravity="start" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_below="@id/accountPage_layout"
                android:id="@+id/button_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/profileSettings"
                    style="@style/ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:drawableTop="@drawable/settings"
                    android:layout_marginEnd="5dp"
                    android:text="@string/settings"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/savedRace"
                    style="@style/ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:drawableTop="@drawable/saved"
                    android:layout_marginStart="5dp"
                    android:text="@string/saved_race"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/button_layout1"
                android:id="@+id/button_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="10dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/logout"
                    style="@style/ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:drawableTop="@drawable/logout"
                    android:layout_marginEnd="5dp"
                    android:text="@string/logout"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <include layout="@layout/footer_account"/>
</LinearLayout>