<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="30dp">
    <androidx.cardview.widget.CardView
        android:layout_marginStart="10dp"
        android:id="@+id/flag_layout"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        android:elevation="0dp">
        <ImageView
            android:id="@+id/flag"
            android:layout_width="105dp"
            android:layout_height="70dp"
            android:src="@drawable/ru"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/flag_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/raceName"
            android:textStyle="bold"
            android:gravity="bottom"
            android:textAppearance="@style/TextStyle.GoodTiming.Regular.ForHeader"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Las Vegas 2024"
            android:textAllCaps="true"/>
        <TextView
            android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo"
            android:layout_below="@id/raceName"
            android:id="@+id/circuitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Las Vegas Strip Circuit"/>
    </RelativeLayout>
    <ImageView
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/circuitImage"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@id/flag_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/vegas"
        android:scaleType="fitCenter"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/circuitImage">
        <RelativeLayout
            android:layout_marginEnd="20dp"
            android:id="@+id/length_layout"
            style="@style/CircuitLayout"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/length_info"
                android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Circuit length"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_below="@id/length_info"
                android:id="@+id/length"
                android:textAppearance="@style/TextStyle.Audiowide.ForCountdown"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.201"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/length"
                android:gravity="bottom"
                android:layout_below="@id/length_info"
                android:textAppearance="@style/TextStyle.GoodTiming.Regular.ForHeader"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KM"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/circuitInfo_1"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:layout_below="@id/length_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <LinearLayout
                style="@style/CircuitInfoLayout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="5dp">
                <TextView
                    android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. of laps"/>
                <TextView
                    android:id="@+id/lapsNum"
                    android:textAppearance="@style/TextStyle.Audiowide.ForCountdown"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50"/>
            </LinearLayout>
            <LinearLayout

                style="@style/CircuitInfoLayout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp">
                <TextView
                    android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Grand Prix"/>
                <TextView
                    android:id="@+id/firstGP"
                    android:textAppearance="@style/TextStyle.Audiowide.ForCountdown"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2023"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            style="@style/CircuitInfoLayout"
            android:layout_below="@id/circuitInfo_1"
            android:id="@+id/circuitInfo_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/raceDist_info"
                android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Circuit length"/>
            <TextView
                android:layout_below="@id/raceDist_info"
                android:id="@+id/raceDist"
                android:textAppearance="@style/TextStyle.Audiowide.ForCountdown"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="309.958"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/raceDist"
                android:gravity="bottom"
                android:layout_below="@id/raceDist_info"
                android:textAppearance="@style/TextStyle.GoodTiming.Regular.ForHeader"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KM"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            style="@style/CircuitInfoLayout"
            android:layout_below="@id/circuitInfo_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/lapRecord_info"
                android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lap record"/>
            <TextView
                android:id="@+id/lapRecord_time"
                android:textAppearance="@style/TextStyle.Audiowide.ForCountdown"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1:35.490"/>
            <TextView
                android:id="@+id/lapRecord_driver"
                android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oscar Piastri (2023)"
                android:paddingBottom="5dp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>