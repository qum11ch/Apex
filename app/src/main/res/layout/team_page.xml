<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".teamPageActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:background="@color/pink">
        <ImageButton
            android:id='@+id/backButton'
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow"
            android:background="@color/pink"/>
        <TextView
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:id="@+id/teamsHeader"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:background="@color/pink"
            android:text="@string/team_page_header"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ScrollView
        android:layout_weight="1"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/futureRace_layout"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            style="@style/LayoutStyle"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/teamName"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="40dp"
                android:text="teamName"
                style="@style/SecondTitleTextStyle"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/poster_image"
                android:layout_width="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_height="300dp"
                android:scaleType="fitStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:src="@drawable/f1"
                app:layout_constraintTop_toBottomOf="@+id/teamName" />
            <TextView

                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:textColor="@color/black"
                android:id="@+id/raceText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/pink"
                android:text="@string/team_information"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/poster_image"/>
            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/raceText"
                android:weightSum="2">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/location_text"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/location"

                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:gravity="end"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/location"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="location"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:gravity="start"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wins_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintTop_toBottomOf="@+id/location_layout"
                android:weightSum="2"
                android:background="@color/light_blue">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/wins_text"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/wins"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:gravity="end"
                    />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/wins"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="wins"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:gravity="start"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/firstTeamEntry_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintTop_toBottomOf="@+id/wins_layout"
                android:weightSum="2">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/firstTeamEntry_text"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/first_entry"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:gravity="end"
                    />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/firstTeamEntry"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="firstTeamEntry"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:gravity="start"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/worldChamps_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/firstTeamEntry_layout"
                android:weightSum="2"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:background="@color/light_blue">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/worldChamps_text"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/world_championships"
                    android:gravity="end"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                     />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/worldChamps"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="worldChamps"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:gravity="start"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/polePositions_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintTop_toBottomOf="@+id/worldChamps_layout"
                android:weightSum="2">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/polePositions_text"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/pole_position_team"
                    android:gravity="end"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                     />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/polePositions"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="polePositions"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:gravity="start"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/teamPrincipal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/polePositions_layout"
                android:weightSum="2"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:background="@color/light_blue">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/teamPrincipal_text"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/team_principal"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:gravity="end"
                    />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/teamPrincipal"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="teamPrincipal"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:gravity="start"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/engine_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintTop_toBottomOf="@+id/teamPrincipal_layout"
                android:weightSum="2">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/engine_text"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/engine"
                    android:gravity="end"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                     />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/engine"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="engine"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:gravity="start"
                     />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <include layout="@layout/footer_teams"/>
</LinearLayout>