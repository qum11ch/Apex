<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:backgroundTint="@color/red"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/red"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/content_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_gradient"
                android:fitsSystemWindows="true"
                android:paddingTop="40dp"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">
                <RelativeLayout
                    android:id="@+id/driver_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="0dp">
                    <View
                        android:id="@+id/line"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginBottom="60dp"/>
                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/line"
                        android:textColor="@color/white"
                        android:id='@+id/driverfullName'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextStyle.GoodTiming.Regular.ForHeader"
                        tools:ignore="RelativeOverlap" />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/line"
                        android:layout_below="@id/driverfullName"
                        android:textColor="@color/white"
                        android:id='@+id/driverFamilyName'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/line"
                        android:layout_below="@id/driverFamilyName"
                        android:textColor="@color/white"
                        android:id='@+id/driverNumber'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader" />
                    <View
                        android:id="@+id/line2"
                        android:layout_width="2dp"
                        android:layout_toEndOf="@id/driverNumber"
                        android:layout_below="@id/driverFamilyName"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="20dp"
                        android:background="@color/white_alpha" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/driverNumber"
                        android:layout_below="@id/driverFamilyName"
                        android:textColor="@color/white"
                        android:id='@+id/teamName'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextStyle.GoodTiming.Regular.ForHeader" />
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/driver_image"
                        android:layout_width="168dp"
                        android:layout_height="168dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/driverimage"
                        android:fitsSystemWindows="true"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitEnd"
                        app:layout_collapseMode="parallax" />
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="pin"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp">
                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id='@+id/backButton'
                            android:contentDescription="@string/back_arrow"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/back_arrow"
                            android:background="@android:color/transparent"/>
                        <TextView
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"
                            android:id="@+id/driverName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/backButton"
                            android:gravity="center_vertical|center"
                            android:textAppearance="@style/TextStyle.Gram.Regular.ForTab"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="45dp"/>
                        <ToggleButton
                            android:checked="false"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/like_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="15dp"
                            android:textOn=""
                            android:textOff=""
                            style="@style/LikeToggleButton"
                            android:background="@drawable/like_toggle_bg"/>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <com.google.android.material.tabs.TabLayout
                android:elevation="2dp"
                app:layout_collapseMode="pin"
                style="@style/AppTabLayoutPages"
                android:background="@color/white"
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="bottom" />
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_grey"
            android:overScrollMode="never"
            app:layout_anchor="@+id/nestedScrollView"
            app:layout_anchorGravity="center"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"/>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>
