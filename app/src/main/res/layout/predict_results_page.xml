<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:background="@color/red">
        <ImageButton
            android:layout_marginTop="2dp"
            android:id='@+id/backButton'
            android:contentDescription="@string/back_arrow"
            android:paddingEnd="30dp"
            android:paddingStart="0dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:background="@color/red"/>
        <TextView
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:text="@string/prediction"
            android:id="@+id/teamsHeader"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/poleLap_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_striped_lines_darkblue">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_text_prediction"
                    android:text="@string/warning_it"
                    android:textStyle="normal"
                    android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo"
                    android:textColor="@color/white"/>
                <RelativeLayout
                    android:layout_below="@id/header_text_prediction"
                    style="@style/PtsStyle"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorDriverPages">
                    <TextView
                        android:id="@+id/poleLap_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pole_position"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_below="@id/poleLap_header"
                        android:id="@+id/event_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/text_color_main"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"/>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/poleLapDriver_layout"
                        android:layout_below="@id/event_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/poleLapDriverName"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader"
                            android:textColor="@color/text_color_main"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp" />

                        <TextView
                            android:id="@+id/poleLapTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textColor="@color/text_color_main"
                            android:textSize="20sp"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:visibility="visible"
                        android:id="@+id/shimmer_layout_driver"
                        android:layout_below="@id/event_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/shimmer_fastest_lap"/>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/poleLap_layout"
                android:background="@color/colorDriverPages"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:background="@color/dark_blue"
                    android:id="@+id/quali_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <TextView
                        android:text="@string/pos_header"
                        android:layout_weight="0.5"
                        android:id="@+id/driver_placement"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                    <TextView
                        android:text="@string/driver_header"
                        android:paddingStart="15dp"
                        android:paddingEnd="8dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:textAllCaps="true"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/driverName"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                    <TextView
                        android:text="@string/q1_header"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_gravity="center"
                        android:id="@+id/Q1_time"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                    <TextView
                        android:text="@string/q2_header"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_gravity="center"
                        android:id="@+id/Q2_time"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                    <TextView
                        android:text="@string/q3_header"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_gravity="center"
                        android:id="@+id/Q3_time"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    android:id="@+id/header_line"
                    android:layout_below="@id/quali_header"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_line">
                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/quali_results" />
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <include layout="@layout/shimmer_quali_result"/>
                            <include layout="@layout/shimmer_quali_result"/>
                            <include layout="@layout/shimmer_quali_result"/>
                            <include layout="@layout/shimmer_quali_result"/>
                            <include layout="@layout/shimmer_quali_result"/>
                            <include layout="@layout/shimmer_quali_result"/>
                            <include layout="@layout/shimmer_quali_result"/>
                            <include layout="@layout/shimmer_quali_result"/>
                            <include layout="@layout/shimmer_quali_result"/>
                            <include layout="@layout/shimmer_quali_result"/>
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>