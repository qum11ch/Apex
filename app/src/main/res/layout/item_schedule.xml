<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            style="@style/ItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <RelativeLayout
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/eventDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/TextStyle.Audiowide.ForDays" />
                <TextView
                    android:textAllCaps="true"
                    android:id="@+id/eventMonth"
                    style="@style/PtsStyle"
                    android:layout_width="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eventDay"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAppearance="@style/TextStyle.Audiowide.ForPTS"
                    android:textColor="@color/grey" />
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey" />
            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_width="0dp"
                android:layout_weight="3.9"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:paddingTop="10dp">
                <TextView
                    android:id="@+id/eventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader" />
                <TextView
                    android:textStyle="normal"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/eventTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eventName"
                    android:layout_marginEnd="8dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@color/text_color_thirdly"
                    android:lineSpacingExtra="0dp"
                    android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>