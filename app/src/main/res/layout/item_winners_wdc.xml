<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:background="@color/colorDriverPages"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:id="@+id/placement"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:textSize="16sp"
                android:textAppearance="@style/TextStyle.Audiowide.ForPlacement"/>
            <View
                android:id="@+id/line"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/text_color_thirdly"/>
            <LinearLayout
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:orientation="vertical"
                android:id="@+id/driverName_layout"
                android:layout_width="0dp"
                android:layout_weight="1.75"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:id='@+id/driverName'
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.GoodTiming.Regular.ForHeader" />
                <TextView
                    android:textSize="18sp"
                    android:id='@+id/driverFamilyName'
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader" />
            </LinearLayout>
            <TextView
                android:layout_marginEnd="1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/currentPoints"
                style="@style/ResultsStyle"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textAppearance="@style/TextStyle.Audiowide.ForPTS"
                android:textSize="12sp"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:id="@+id/maxPoints"
                style="@style/ResultsStyle"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textAppearance="@style/TextStyle.Audiowide.ForPTS"
                android:textSize="12sp"/>
            <TextView
                android:includeFontPadding="false"
                android:layout_gravity="center"
                android:layout_weight="0.75"
                android:id="@+id/canWin"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader"/>
        </LinearLayout>
        <View
            android:id="@+id/bottomLine"
            android:background="@color/light_silver"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>