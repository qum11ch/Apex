<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:background="@color/red">
        <ImageButton
            android:layout_centerVertical="true"
            android:id='@+id/backButton'
            android:contentDescription="@string/back_arrow"
            android:paddingEnd="30dp"
            android:paddingStart="0dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:background="@color/red"/>
        <TextView
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:text="@string/winners_wdc_header"
            android:id="@+id/teamsHeader"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/poleLap_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/striped_background_darkblue"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/winnersWDC_info"
                    android:text="@string/winner_wdc_info_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textAppearance="@style/TextStyle.Gram.Regular.ForInfo"
                    android:textColor="@color/white"/>
                <RelativeLayout
                    android:layout_below="@id/winnersWDC_info"
                    style="@style/PtsStyle"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorDriverPages">
                    <LinearLayout
                        android:id="@+id/roundLayout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAllCaps="true"
                            android:text="@string/round"
                            android:id="@+id/round_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingEnd="5dp"
                            android:paddingStart="0dp"
                            android:textColor="@color/red"
                            android:textSize="18sp"
                            android:textAppearance="@style/TextStyle.Audiowide.ForPTS"/>

                        <TextView
                            android:id="@+id/round"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="0dp"
                            android:paddingEnd="10dp"
                            android:textAppearance="@style/TextStyle.Audiowide.ForPTS"
                            android:textColor="@color/red"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/raceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/roundLayout"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/text_color_main"
                        android:textStyle="normal"
                        android:lineSpacingExtra="0dp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_below="@id/raceName"
                        android:id="@+id/remaining_events_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/remaining_events_text"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/text_color_main"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                    <LinearLayout
                        android:id="@+id/conv_events_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/remaining_events_info"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp">
                        <TextView
                            android:id="@+id/conv_events_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/conventional_events_text"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textColor="@color/text_color_main"
                            android:textSize="20sp"
                            android:layout_marginEnd="5dp"/>
                        <TextView
                            android:layout_marginEnd="10dp"
                            android:id="@+id/conv_events_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textColor="@color/text_color_main"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:id="@+id/sprint_events_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/conv_events_layout"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp">
                        <TextView
                            android:id="@+id/sprint_events_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sprint_events_text"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textColor="@color/text_color_main"
                            android:textSize="20sp"
                            android:layout_marginEnd="5dp"/>
                        <TextView
                            android:layout_marginEnd="10dp"
                            android:id="@+id/sprint_events_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                            android:textColor="@color/text_color_main"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <TextView
                        android:textStyle="bold"
                        android:layout_below="@id/sprint_events_layout"
                        android:id="@+id/max_points_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/max_points_events_text"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:textColor="@color/text_color_main"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_below="@id/max_points_text"
                        android:id="@+id/max_points_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_main"
                        android:textSize="20sp"
                        android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@id/poleLap_layout"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:background="@color/dark_blue"
                android:id="@+id/wdc_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:includeFontPadding="false"
                    android:text="@string/pos_header"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <TextView
                    android:text="@string/driver_header"
                    android:paddingStart="5dp"
                    android:includeFontPadding="false"
                    android:paddingEnd="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.75"
                    android:textAllCaps="true"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <TextView
                    android:includeFontPadding="false"
                    android:text="@string/actual_points_text"
                    android:layout_marginEnd="1dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <TextView
                    android:includeFontPadding="false"
                    android:text="@string/max_points_text"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <TextView
                    android:includeFontPadding="false"
                    android:text="@string/can_win_wdc_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_marginEnd="1dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:id="@+id/header_line"
                android:layout_below="@id/wdc_table"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_winnersWDC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_line"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-1dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="5dp"
                android:visibility="gone" />
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_below="@id/header_line"
                android:id="@+id/shimmer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:duration="1500">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <include layout="@layout/shimmer_winners_wdc" />
                    <include layout="@layout/shimmer_winners_wdc" />
                    <include layout="@layout/shimmer_winners_wdc" />
                    <include layout="@layout/shimmer_winners_wdc" />
                    <include layout="@layout/shimmer_winners_wdc" />
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>