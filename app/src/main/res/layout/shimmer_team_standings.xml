<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_marginBottom="10dp"
            style="@style/ItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <RelativeLayout
                android:id="@+id/left_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:paddingEnd="3dp">
                <TextView
                    android:layout_marginStart="5dp"
                    style="@style/ShimmerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Audiowide.ForPlacement"/>
            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>
            <RelativeLayout
                android:id="@+id/team_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/ShimmerStyle"
                    android:id="@+id/teamName"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    style="@style/ShimmerStyle"
                    android:id="@+id/driverFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teamName"
                    android:layout_marginEnd="5dp"
                    android:textAppearance="@style/TextStyle.Fishmonger.ForInfo" />
                <TextView
                    android:layout_marginTop="2dp"
                    style="@style/ShimmerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/driverFirst"
                    android:layout_marginEnd="5dp"
                    android:textAppearance="@style/TextStyle.Fishmonger.ForInfo" />

            </RelativeLayout>
            <View
                style="@style/ShimmerStyle"
                android:layout_weight="1.8"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>