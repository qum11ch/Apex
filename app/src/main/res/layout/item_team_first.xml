<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_marginBottom="10dp"
            style="@style/ItemStyleAlt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <RelativeLayout
                android:id="@+id/left_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">
                <TextView
                    android:id="@+id/team_placement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textAppearance="@style/TextStyle.Audiowide.ForPlacement"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <RelativeLayout
                android:id="@+id/team_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/teamName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="0dp"
                    android:textAppearance="@style/TextStyle.GoodTiming.Bold.Big"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/driverFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teamName"
                    android:layout_marginEnd="8dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textAppearance="@style/TextStyle.ShareTechCYR.ForInfo" />
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/driverSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/driverFirst"
                    android:layout_marginEnd="8dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textAppearance="@style/TextStyle.ShareTechCYR.ForInfo" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/striped_background_darkgrey_white"
                    android:scaleType="fitXY"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_card_custom_corners"/>
                <HorizontalScrollView
                    android:scrollbars="none"
                    android:id="@+id/horizontal_scroll"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:id="@+id/team_car"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </HorizontalScrollView>
                <TextView
                    android:textAlignment="center"
                    android:layout_marginStart="90dp"
                    android:id="@+id/team_pts"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentBottom="true"
                    style="@style/PtsStyle"
                    android:textAllCaps="true"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/dark_grey"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextStyle.Audiowide.ForPTS"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>