<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".logInPageActivity">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:background="@color/red">
        <ImageButton
            android:layout_marginTop="2dp"
            android:id='@+id/backButton'
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:background="@color/red"/>
        <TextView
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:text="Login"
            android:id="@+id/raceHeader"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/header"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/StyledTilEditTextTheme"
                app:hintTextAppearance="@style/TextStyle.Gram.Regular.Simple"
                app:hintTextColor="@color/black"
                app:errorTextAppearance="@style/TextStyle.Gram.Regular.Simple"
                app:errorTextColor="@color/red"
                android:id="@+id/username_layout"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:hint="@string/usernameText"
                app:hintEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:theme="@style/StyledTilEditTextTheme"
                    android:id="@+id/loginUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/StyledTilEditTextTheme"
                app:hintTextAppearance="@style/TextStyle.Gram.Regular.Simple"
                app:hintTextColor="@color/black"
                app:errorTextAppearance="@style/TextStyle.Gram.Regular.Simple"
                app:errorTextColor="@color/red"
                android:id="@+id/password_layout"
                android:layout_below="@id/username_layout"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                app:hintEnabled="true"
                android:hint="@string/passwordText">
                <com.google.android.material.textfield.TextInputEditText
                    android:textAppearance="@style/TextStyle.Gram.Regular.Countdown"
                    android:inputType="textPassword"
                    android:theme="@style/StyledTilEditTextTheme"
                    android:id="@+id/loginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="end"
                    android:textColor="@color/red"
                    android:textAppearance="@style/TextStyle.Gram.Bold"
                    android:textSize="20sp"
                    android:id="@+id/resetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot password?" />
            </com.google.android.material.textfield.TextInputLayout>
            <FrameLayout
                android:layout_below="@id/password_layout"
                android:id="@+id/loginButton_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp">
                <ProgressBar
                    android:backgroundTint="@color/red"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:id="@+id/loginProgress"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/red"/>
                <Button
                    android:enabled="false"
                    android:textAppearance="@style/TextStyle.GoodTiming.Bold.ForHeader"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:elevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/loginButton"
                    android:text="@string/loginButton"
                    style="@style/ButtonStyle"/>
            </FrameLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:layout_below="@id/loginButton_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signUpLayout">
                <TextView
                    android:textAppearance="@style/TextStyle.Gram.Regular"
                    android:textSize="20sp"
                    android:id="@+id/signUpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/singUpText1"
                    android:textAlignment="center" />
                <TextView
                    android:textAppearance="@style/TextStyle.Gram.Regular"
                    android:textSize="20sp"
                    android:id="@+id/signUpText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/singUpText2"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/red"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <include layout="@layout/footer_account"/>
</RelativeLayout>